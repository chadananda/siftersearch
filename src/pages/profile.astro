---
import Layout from '../layouts/Layout.astro';
import LiquidBackground from '../components/LiquidBackground.svelte';
import NavBar from '../components/common/NavBar.svelte';
import ProfilePage from '../components/ProfilePage.svelte';

---

<Layout title="Profile - SifterSearch" description="View and manage your SifterSearch profile.">
  <LiquidBackground client:only="svelte" />
  <NavBar currentPage="profile" client:load />
  <main class="profile-wrapper">
    <div class="page-container">
      <ProfilePage client:only="svelte" />
    </div>
  </main>
</Layout>

<style>
  .profile-wrapper {
    min-height: calc(100vh - 3.5rem);
    position: relative;
    z-index: 1;
  }

  .page-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
</style>
