---
import { getCollection, render } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import ThemeToggle from '../../../components/ThemeToggle.svelte';

export async function getStaticPaths() {
  const agents = await getCollection('agents');
  return agents.map((agent) => ({
    params: { slug: agent.id.replace('agent-', '') },
    props: { agent },
  }));
}

const { agent } = Astro.props;
const { Content } = await render(agent);

// Extract title from frontmatter or derive from filename
const title = agent.data.title || agent.id.replace('agent-', '').replace(/-/g, ' ').replace(/\b\w/g, c => c.toUpperCase()) + ' Agent';
const description = agent.data.description || `Documentation for the ${title}`;
const role = agent.data.role || 'Agent';

// Get all agents for navigation
const allAgents = await getCollection('agents');
const sortedAgents = allAgents.sort((a, b) => (a.data.order || 99) - (b.data.order || 99));

// Icon mapping
const iconMap: Record<string, string> = {
  'cpu': 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z',
  'search': 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  'bar-chart': 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  'languages': 'M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129',
  'volume-2': 'M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z',
  'brain': 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  'book-open': 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
};

const getIcon = (icon?: string) => iconMap[icon || 'cpu'] || iconMap['cpu'];
---

<Layout title={`${title} - SifterSearch Docs`} description={description}>
  <main class="docs-page">
    <div class="page-wrapper">
      <!-- Header -->
      <header class="header">
        <a href="/" class="logo-link">
          <img src="/ocean.svg" alt="SifterSearch" class="logo" />
          <h1 class="site-title">SifterSearch</h1>
        </a>
        <nav class="nav">
          <ThemeToggle client:only="svelte" />
          <a href="/about" class="nav-link">About</a>
          <a href="/" class="nav-link">Search</a>
        </nav>
      </header>

      <div class="content-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
          <h2 class="sidebar-title">Agent Documentation</h2>
          <nav class="sidebar-nav">
            {sortedAgents.map((a) => {
              const agentSlug = a.id.replace('agent-', '');
              const agentTitle = a.data.title || agentSlug.replace(/-/g, ' ').replace(/\b\w/g, c => c.toUpperCase()) + ' Agent';
              const isActive = a.id === agent.id;
              return (
                <a
                  href={`/docs/agents/${agentSlug}`}
                  class:list={['sidebar-link', { active: isActive }]}
                >
                  <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIcon(a.data.icon)} />
                  </svg>
                  <span class="sidebar-label">{agentTitle.replace(' Agent', '')}</span>
                  <span class="sidebar-role">{a.data.role || 'Agent'}</span>
                </a>
              );
            })}
          </nav>
        </aside>

        <!-- Main Content -->
        <article class="content">
          <div class="content-header">
            <div class="agent-icon-large">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIcon(agent.data.icon)} />
              </svg>
            </div>
            <div>
              <span class="role-badge">{role}</span>
              <h1 class="page-title">{title}</h1>
              {description && <p class="page-description">{description}</p>}
            </div>
          </div>

          <div class="prose">
            <Content />
          </div>
        </article>
      </div>

      <!-- Footer -->
      <footer class="footer">
        <p>&copy; {new Date().getFullYear()} Chad Jones. A companion tool for <a href="https://oceanlibrary.com" class="footer-link">OceanLibrary.com</a>.</p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  .docs-page {
    min-height: 100vh;
    position: relative;
    background-color: var(--surface-0);
  }

  .page-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Header */
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--border-default);
    background-color: var(--surface-0);
    position: sticky;
    top: 0;
    z-index: 50;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: inherit;
  }

  .logo {
    width: 2rem;
    height: 2rem;
    border-radius: 0.5rem;
  }

  .site-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-link {
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.15s;
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  /* Content Layout */
  .content-layout {
    display: flex;
    flex: 1;
    overflow: hidden;
  }

  /* Sidebar */
  .sidebar {
    width: 280px;
    flex-shrink: 0;
    border-right: 1px solid var(--border-default);
    background-color: var(--surface-0);
    padding: 1.5rem 1rem;
    overflow-y: auto;
    display: none;
  }

  @media (min-width: 1024px) {
    .sidebar {
      display: block;
    }
  }

  .sidebar-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: 1rem;
    padding: 0 0.75rem;
  }

  .sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .sidebar-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--text-secondary);
    transition: all 0.15s;
  }

  .sidebar-link:hover {
    background-color: var(--surface-elevated);
    color: var(--text-primary);
  }

  .sidebar-link.active {
    background-color: var(--accent-primary);
    color: white;
  }

  .sidebar-link.active .sidebar-role {
    color: rgba(255, 255, 255, 0.8);
  }

  .sidebar-icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }

  .sidebar-label {
    font-weight: 500;
    font-size: 0.875rem;
  }

  .sidebar-role {
    margin-left: auto;
    font-size: 0.7rem;
    color: var(--text-muted);
    white-space: nowrap;
  }

  /* Content */
  .content {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
  }

  @media (min-width: 768px) {
    .content {
      padding: 3rem;
    }
  }

  .content-header {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-default);
  }

  .agent-icon-large {
    width: 4rem;
    height: 4rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    flex-shrink: 0;
  }

  .agent-icon-large svg {
    width: 2rem;
    height: 2rem;
    color: white;
  }

  .role-badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-primary);
    margin-bottom: 0.5rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  /* Prose Styling */
  .prose {
    max-width: 65ch;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .prose :global(h1) {
    display: none; /* Hide the first h1 since we show it in header */
  }

  .prose :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-default);
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(h4) {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .prose :global(p) {
    margin-bottom: 1rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(code) {
    font-family: 'Fira Code', 'Consolas', monospace;
    font-size: 0.875em;
    background-color: var(--surface-elevated);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    color: var(--accent-secondary);
  }

  .prose :global(pre) {
    background-color: var(--surface-elevated);
    border: 1px solid var(--border-default);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: var(--text-primary);
    font-size: 0.8rem;
    line-height: 1.6;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: 0.75rem;
    text-align: left;
    border: 1px solid var(--border-default);
  }

  .prose :global(th) {
    background-color: var(--surface-elevated);
    font-weight: 600;
    color: var(--text-primary);
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--accent-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--text-muted);
  }

  .prose :global(a) {
    color: var(--accent-primary);
    text-decoration: none;
  }

  .prose :global(a:hover) {
    text-decoration: underline;
  }

  .prose :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border-default);
    margin: 2rem 0;
  }

  /* Footer */
  .footer {
    text-align: center;
    padding: 2rem 1rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    border-top: 1px solid var(--border-default);
    background-color: var(--surface-0);
  }

  .footer-link {
    color: var(--text-secondary);
    text-decoration: none;
  }

  .footer-link:hover {
    color: var(--text-primary);
  }
</style>
