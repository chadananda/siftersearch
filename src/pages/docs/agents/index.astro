---
import { getCollection, render } from 'astro:content';
import DocsLayout from '../../../layouts/DocsLayout.astro';

// Get the README content from docsIndex collection
const docsIndexEntries = await getCollection('docsIndex');
const indexEntry = docsIndexEntries[0]; // README.md is the only file
const { Content } = indexEntry ? await render(indexEntry) : { Content: null };

// Get all agents for the card grid
const allAgents = await getCollection('agents');
const sortedAgents = allAgents.sort((a, b) => (a.data.order || 99) - (b.data.order || 99));

// Agent metadata for cards
const agentMeta: Record<string, { color: string; gradient: string }> = {
  'agent-sifter': {
    color: 'var(--accent-primary)',
    gradient: 'linear-gradient(135deg, #3b82f6, #8b5cf6)'
  },
  'agent-researcher': {
    color: 'var(--accent-secondary)',
    gradient: 'linear-gradient(135deg, #06b6d4, #3b82f6)'
  },
  'agent-analyzer': {
    color: 'var(--accent-tertiary)',
    gradient: 'linear-gradient(135deg, #8b5cf6, #ec4899)'
  },
  'agent-translator': {
    color: 'var(--warning)',
    gradient: 'linear-gradient(135deg, #f59e0b, #ef4444)'
  },
  'agent-narrator': {
    color: 'var(--success)',
    gradient: 'linear-gradient(135deg, #10b981, #06b6d4)'
  },
  'agent-memory': {
    color: 'var(--accent-primary)',
    gradient: 'linear-gradient(135deg, #6366f1, #a855f7)'
  },
  'agent-librarian': {
    color: 'var(--accent-secondary)',
    gradient: 'linear-gradient(135deg, #14b8a6, #22c55e)'
  },
  'agent-transcriber': {
    color: 'var(--warning)',
    gradient: 'linear-gradient(135deg, #f97316, #fb923c)'
  },
};

// Icon paths
const iconMap: Record<string, string> = {
  'cpu': 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z',
  'search': 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  'bar-chart': 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  'languages': 'M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129',
  'volume-2': 'M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z',
  'brain': 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  'book-open': 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
  'microphone': 'M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z',
};

const getIcon = (icon?: string) => iconMap[icon || 'cpu'] || iconMap['cpu'];

const title = indexEntry?.data.title || 'Agent Architecture';
const description = indexEntry?.data.description || 'Documentation for the SifterSearch multi-agent AI system';
---

<DocsLayout title={title} description={description} activeSection="agents">
  <h1>Agent Architecture</h1>
  <p class="subtitle">Specialized AI agents working together to deliver intelligent search</p>

  <p>
    SifterSearch uses a multi-agent architecture where specialized AI agents collaborate to
    understand your query, search the library, analyze results, and present findings. Each agent
    has a specific role and expertise.
  </p>

  <!-- Agent Cards Grid -->
  <section class="agents-section">
    <h2>Meet the Agents</h2>
    <div class="agents-grid">
      {sortedAgents.map((agent) => {
        const slug = agent.id.replace('agent-', '');
        const agentTitle = agent.data.title || slug.replace(/-/g, ' ').replace(/\b\w/g, c => c.toUpperCase()) + ' Agent';
        const meta = agentMeta[agent.id] || { color: 'var(--accent-primary)', gradient: 'linear-gradient(135deg, #3b82f6, #8b5cf6)' };

        return (
          <a href={`/docs/agents/${slug}`} class="agent-card">
            <div class="agent-image" style={`background: ${meta.gradient};`}>
              <svg class="agent-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={getIcon(agent.data.icon)} />
              </svg>
            </div>
            <div class="agent-content">
              <span class="agent-role">{agent.data.role || 'Agent'}</span>
              <h3 class="agent-title">{agentTitle.replace(' Agent', '')}</h3>
              <p class="agent-desc">{agent.data.description}</p>
            </div>
          </a>
        );
      })}
    </div>
  </section>

  <!-- README Content -->
  {Content && (
    <section class="readme-section">
      <div class="prose">
        <Content />
      </div>
    </section>
  )}
</DocsLayout>

<style>
  /* Agents Section */
  .agents-section {
    margin: 2rem 0 3rem;
  }

  .agents-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;
    margin-top: 1.5rem;
  }

  @media (min-width: 640px) {
    .agents-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .agent-card {
    display: flex;
    flex-direction: column;
    background: var(--surface-1);
    border: 1px solid var(--border-default);
    border-radius: 0.75rem;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.2s;
  }

  .agent-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: var(--accent-primary);
  }

  .agent-image {
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .agent-icon {
    width: 2.5rem;
    height: 2.5rem;
    color: white;
    opacity: 0.9;
  }

  .agent-content {
    padding: 1rem;
  }

  .agent-role {
    display: inline-block;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-primary);
    margin-bottom: 0.25rem;
  }

  .agent-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.375rem 0;
  }

  .agent-desc {
    font-size: 0.8rem;
    color: var(--text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: 0;
  }

  /* README Section */
  .readme-section {
    background: var(--surface-1);
    border: 1px solid var(--border-default);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-top: 2rem;
  }

  /* Hide h1 and "Meet the Agents" sections in README since we show them above */
  .prose :global(h1),
  .prose :global(h2:first-of-type) {
    display: none;
  }
</style>
