---
import Layout from '../layouts/Layout.astro';
import LiquidBackground from '../components/LiquidBackground.svelte';
import NavBar from '../components/common/NavBar.svelte';
import SettingsPage from '../components/SettingsPage.svelte';

export const prerender = true;
---

<Layout title="Settings - SifterSearch" description="Manage your SifterSearch account settings.">
  <LiquidBackground client:only="svelte" />
  <NavBar currentPage="settings" client:load />
  <main class="settings-wrapper">
    <div class="page-container">
      <SettingsPage client:only="svelte" />
    </div>
  </main>
</Layout>

<style>
  .settings-wrapper {
    min-height: calc(100vh - 3.5rem);
    position: relative;
    z-index: 1;
  }

  .page-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
</style>
