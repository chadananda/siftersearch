---
import Layout from './Layout.astro';
import NavBar from '../components/common/NavBar.svelte';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Admin Dashboard' } = Astro.props;
const currentPath = Astro.url.pathname;

// Helper to check if a nav item is active
function isActive(href: string): boolean {
  if (href === '/admin') {
    return currentPath === '/admin' || currentPath === '/admin/';
  }
  return currentPath.startsWith(href);
}
---

<Layout title={title} description={description}>
  <NavBar client:load currentPage="admin" />
  <slot name="background" />
  <div class="admin-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <span class="logo-text">Admin Panel</span>
      </div>
      <nav class="sidebar-nav">
        <a href="/admin" class:list={["nav-item", { active: isActive('/admin') }]}>
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Dashboard
        </a>
        <a href="/admin/users" class:list={["nav-item", { active: isActive('/admin/users') }]}>
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          Users
        </a>
        <a href="/admin/pending" class:list={["nav-item", { active: isActive('/admin/pending') }]}>
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Pending Approval
        </a>
        <a href="/admin/documents" class:list={["nav-item", { active: isActive('/admin/documents') }]}>
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Documents
        </a>
        <a href="/admin/ai-usage" class:list={["nav-item", { active: isActive('/admin/ai-usage') }]}>
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          AI Usage
        </a>
        <a href="/admin/raw-search" class:list={["nav-item", { active: isActive('/admin/raw-search') }]}>
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-4.35-4.35"/>
          </svg>
          Raw Search
        </a>
      </nav>
      <div class="sidebar-footer">
        <a href="/" class="nav-item">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Search
        </a>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <slot />
    </main>
  </div>
</Layout>

<style>
  .admin-layout {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    width: 240px;
    background: var(--surface-1);
    border-right: 1px solid var(--border-default);
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
    position: sticky;
    top: 0;
    height: 100vh;
    z-index: 50;
  }

  .sidebar-header {
    padding: 1rem;
    border-bottom: 1px solid var(--border-default);
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text-primary);
  }

  .logo {
    width: 32px;
    height: 32px;
  }

  .logo-text {
    font-weight: 600;
    font-size: 1rem;
  }

  .sidebar-nav {
    flex: 1;
    padding: 1rem 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .sidebar-footer {
    padding: 1rem 0.5rem;
    border-top: 1px solid var(--border-default);
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 0.75rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--text-secondary);
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .nav-item:hover {
    background: var(--surface-2);
    color: var(--text-primary);
  }

  .nav-item.active {
    background: var(--accent-primary);
    color: white;
  }

  .nav-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .main-content {
    flex: 1;
    padding: 2rem;
    min-height: 100vh;
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }
  }
</style>
