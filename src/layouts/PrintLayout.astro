---
/**
 * Print Layout
 * Optimized layout for print views with paper-like styling
 */
interface Props {
  title: string;
  description?: string;
}

const { title, description = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Libre+Caslon+Text:ital,wght@0,400;0,700;1,400&family=Amiri:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

  <style is:global>
    /* Reset */
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    /* Base Typography */
    body {
      font-family: 'Libre Caslon Text', Georgia, 'Times New Roman', serif;
      font-size: 11pt;
      line-height: 1.6;
      color: #1a1a1a;
      background: #f5f5f5;
    }

    /* Print container */
    .print-page {
      max-width: 8.5in;
      margin: 0 auto;
      background: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    /* RTL Support */
    [dir="rtl"] {
      font-family: 'Amiri', 'Traditional Arabic', serif;
      font-size: 14pt;
      line-height: 1.85;
    }

    /* Print Styles */
    @media print {
      body {
        background: white;
      }

      .print-page {
        box-shadow: none;
        max-width: none;
      }

      .no-print {
        display: none !important;
      }

      /* Page breaks */
      .page-break {
        page-break-before: always;
      }

      .avoid-break {
        page-break-inside: avoid;
      }

      /* Headers/footers */
      @page {
        margin: 0.75in;
        size: letter;
      }
    }

    /* Screen-only print button */
    .print-button {
      position: fixed;
      bottom: 1rem;
      right: 1rem;
      padding: 0.75rem 1.5rem;
      background: #2563eb;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
      z-index: 1000;
    }

    .print-button:hover {
      background: #1d4ed8;
    }

    @media print {
      .print-button {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="print-page">
    <slot />
  </div>

  <button class="print-button no-print" onclick="window.print()">
    Print / Save PDF
  </button>
</body>
</html>
