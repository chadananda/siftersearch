# SifterSearch Environment Configuration
# Copy this to .env and fill in your values

# ===================
# Server
# ===================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4321

# ===================
# Database (Turso/libsql)
# ===================
# For local dev: use file path
TURSO_DATABASE_URL=file:./data/sifter.db
# For production: use Turso cloud
# TURSO_DATABASE_URL=libsql://your-db.turso.io
# TURSO_AUTH_TOKEN=your-turso-token

# ===================
# Meilisearch
# ===================
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=your-meilisearch-master-key

# ===================
# Authentication
# ===================
JWT_ACCESS_SECRET=generate-a-long-random-string-here
JWT_REFRESH_SECRET=generate-another-long-random-string-here
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=90d

# ===================
# AI Providers
# ===================
# OpenAI (required for embeddings)
OPENAI_API_KEY=sk-...

# Anthropic (optional, for admin/patron tiers)
ANTHROPIC_API_KEY=sk-ant-...

# Ollama (local AI)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:32b

# ===================
# Email (optional)
# ===================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email
SMTP_PASS=your-password
SMTP_FROM=noreply@siftersearch.com

# ===================
# Storage Paths
# ===================
LIBRARY_PATH=./storage/library
PROCESSED_PATH=./storage/processed
EMBEDDINGS_PATH=./storage/embeddings

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_VERIFIED=10
RATE_LIMIT_APPROVED=60
RATE_LIMIT_PATRON=100
RATE_LIMIT_ADMIN=1000

# ===================
# Dev Mode
# ===================
# Set to true to use API providers instead of local Ollama (for laptop dev)
DEV_MODE=false
