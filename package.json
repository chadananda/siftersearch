{
  "name": "siftersearch",
  "version": "0.1.615",
  "description": "Use agentic AI research to locate information within thousands of books, manuscripts, papers, notes and publications across multiple languages.",
  "type": "module",
  "bin": {
    "siftersearch": "./bin/siftersearch.js"
  },
  "engines": {
    "node": ">=20.3.0"
  },
  "scripts": {
    "preflight": "node scripts/preflight.js",
    "dev": "DEV_MODE=true node scripts/dev.js",
    "dev:prod": "DEV_MODE=true PUBLIC_API_URL=https://api.siftersearch.com astro dev --port 5173",
    "dev:api": "DEV_MODE=true node --watch api/index.js",
    "dev:ui": "DEV_MODE=true astro dev --port 5173",
    "build": "astro build",
    "build:api": "echo 'API is runtime JS, no build needed'",
    "preview": "astro preview",
    "start": "node api/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "vitest run tests/api",
    "test:e2e": "playwright test",
    "test:bdd": "cucumber-js",
    "test:bdd:prod": "UI_URL=http://localhost:5173 API_URL=https://api.siftersearch.com cucumber-js",
    "test:bdd:critical": "cucumber-js --profile critical",
    "test:bdd:smoke": "cucumber-js --profile smoke",
    "test:bdd:all": "cucumber-js --profile all",
    "test:bdd:search": "cucumber-js --profile search",
    "test:bdd:library": "cucumber-js --profile library",
    "test:bdd:auth": "cucumber-js --profile auth",
    "test:bdd:navigation": "cucumber-js --profile navigation",
    "test:bdd:a11y": "cucumber-js --profile accessibility",
    "test:bdd:implemented": "cucumber-js --profile implemented",
    "test:bdd:pending": "cucumber-js --profile pending",
    "test:coverage": "vitest run --coverage",
    "migrate": "node scripts/migrate.js",
    "migrate:create": "node scripts/migrate.js create",
    "tunnel": "node scripts/tunnel.js",
    "setup:tunnel": "node scripts/setup-tunnel.js",
    "setup:systemd": "node scripts/setup-systemd.js",
    "setup:hooks": "node scripts/install-hooks.js",
    "postinstall": "node scripts/install-hooks.js",
    "index": "node scripts/index-library.js",
    "index:watch": "node scripts/index-library.js --watch",
    "resegment": "node scripts/resegment-oversized.js",
    "resegment:dry": "node scripts/resegment-oversized.js --dry-run --verbose",
    "hooks": "node scripts/deploy-hooks.js",
    "hooks:list": "node scripts/deploy-hooks.js --list",
    "hooks:reset": "node scripts/deploy-hooks.js --reset",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "changelog": "node scripts/generate-changelog.js",
    "prebuild": "node scripts/generate-changelog.js",
    "deploy": "node scripts/bump-version.js && npm run build && npx wrangler pages deploy ./dist --project-name siftersearch",
    "lint": "eslint . --ext .js,.svelte,.astro",
    "format": "prettier --write .",
    "prod:start": "pm2 start ecosystem.config.cjs --env production",
    "prod:stop": "pm2 stop all",
    "prod:restart": "pm2 restart all",
    "prod:reload": "pm2 reload siftersearch-api",
    "prod:logs": "pm2 logs siftersearch-api",
    "prod:status": "pm2 status",
    "prod:verify": "node scripts/verify-deployment.js",
    "prod:deploy": "git pull && npm install && pm2 restart siftersearch-api && sleep 3 && npm run prod:verify"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/svelte": "^7.0.0",
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.3",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.8",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@libsql/client": "^0.15.15",
    "astro": "^5.16.4",
    "astro-seo": "^0.8.4",
    "bcrypt": "^6.0.0",
    "codemirror": "^6.0.2",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.2",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.3",
    "marked": "^17.0.1",
    "meilisearch": "^0.54.0",
    "nanoid": "^5.0.9",
    "ollama": "^0.6.3",
    "openai": "^6.2.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.4",
    "svelte": "^5.45.3",
    "tailwindcss": "^4.1.0",
    "yaml": "^2.7.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.3.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@vite-pwa/astro": "^1.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.1",
    "vitest": "^4.0.15",
    "wrangler": "^4.58.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chadananda/siftersearch.git"
  },
  "keywords": [
    "search",
    "ai",
    "interfaith",
    "library",
    "semantic-search",
    "meilisearch"
  ],
  "author": "Chad Jones",
  "license": "MIT"
}
